def custom_write(file_name: str, strings: list):
    strings_positions = {}
    line_num = 1
    file = open(file_name, 'w', encoding='utf-8')
    for i in strings:
        file.write(f'\n{i}')
        line_byte = file.tell()
        strings_positions[(line_num, line_byte)] = i
        line_num += 1
    file.close()
    return strings_positions


